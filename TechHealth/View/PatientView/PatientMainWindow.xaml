<Window x:Class="TechHealth.View.PatientView.PatientMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TechHealth.View.PatientView"
        mc:Ignorable="d"
        Title="PatientMainWindow" Height="442.921" Width="800">
    <Grid Background="AliceBlue">
        <Menu Margin="0,76,677,10"/>
        <Image Source="/resources/caduceus_logo.png"  Width="auto" Height="auto" Margin="0,10,722,357" RenderTransformOrigin="1.214,0.239"/>
        <Button Content="New Appointment" HorizontalAlignment="Left" Margin="163,355,0,0" VerticalAlignment="Top" Width="120" Height="36" Click="Button_Click_Add"/>
        <Button Content="Update Appointment" HorizontalAlignment="Left" Margin="391,355,0,0" VerticalAlignment="Top" Width="120" Height="36" Click="Button_Click_Update"/>
        <Button Content="Delete Appointment" HorizontalAlignment="Left" Margin="610,355,0,0" VerticalAlignment="Top" Width="120" Height="36" Click="Button_Click_Delete"/>
        <ListView Name="lvAppointments" HorizontalAlignment="Left" Height="321" Margin="163,10,0,0" VerticalAlignment="Top" Width="567" >
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Date" Width="150" DisplayMemberBinding="{Binding Date}" />
                    <GridViewColumn Header="StartTime" Width="120" DisplayMemberBinding="{Binding StartTime}"/>
                    <GridViewColumn Header="Type" Width="150" DisplayMemberBinding="{Binding AppointmentType}" />
                    <GridViewColumn Header="Doctor" Width="150" DisplayMemberBinding="{Binding Doctor.FullName}"/>
                    
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
