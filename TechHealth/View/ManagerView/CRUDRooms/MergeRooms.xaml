<Window x:Class="TechHealth.View.ManagerView.CRUDRooms.MergeRooms"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TechHealth.View.ManagerView.CRUDRooms"
        mc:Ignorable="d"
        Title="MergeRooms" Height="560" Width="400">
    <Grid Background="#272537">
        <Label Content="RoomID:" HorizontalAlignment="Left" Margin="51,78,0,0" VerticalAlignment="Top" FontSize="14" Foreground="White"/>
        <Label Content="Renovation start:" HorizontalAlignment="Left" Margin="51,137,0,0" VerticalAlignment="Top" FontSize="14" Foreground="White"/>
        <Label Content="Start time:" HorizontalAlignment="Left" Margin="51,196,0,0" VerticalAlignment="Top" FontSize="14" Foreground="White"/>
        <Label Content="Renovation end:" HorizontalAlignment="Left" Margin="51,255,0,0" VerticalAlignment="Top" FontSize="14" Foreground="White"/>
        <Label Content="End time:" HorizontalAlignment="Left" Margin="51,307,0,0" VerticalAlignment="Top" FontSize="14" Foreground="White"/>
        <Label Content="Merging room" HorizontalAlignment="Left" Margin="51,359,0,0" VerticalAlignment="Top" FontSize="14" Foreground="White"/>
        <Label Content="New room type" HorizontalAlignment="Left" Margin="51,411,0,0" VerticalAlignment="Top" FontSize="14" Foreground="White"/>
        <TextBox HorizontalAlignment="Left" Margin="207,82,0,0" VerticalAlignment="Top" Width="120" Height="21.96" x:Name="TxtRoomID"/>
        <DatePicker HorizontalAlignment="Left" Margin="207,144,0,0" VerticalAlignment="Top" Width="120" x:Name="RStart">
        </DatePicker>
        <TextBox HorizontalAlignment="Left" Margin="207,200,0,0" VerticalAlignment="Top" Width="120" Height="21.96" x:Name="TxtStartTime"/>
        <DatePicker HorizontalAlignment="Left" Margin="207,255,0,0" VerticalAlignment="Top" Width="120" x:Name="REnd">
        </DatePicker>
        <TextBox HorizontalAlignment="Left" Margin="207,310,0,0" VerticalAlignment="Top" Width="120" Height="21.96" x:Name="TxtEndTime"/>
        <TextBox HorizontalAlignment="Left" Margin="207,366,0,0" VerticalAlignment="Top" Width="120" Height="22" x:Name="TxtMergeRoom"/>
        <ComboBox HorizontalAlignment="Left" Margin="207,415,73,87" VerticalAlignment="Top" Width="120" Height="21.96" x:Name="CbType">
            <ComboBoxItem Content="Operation"/>
            <ComboBoxItem Content="Examination"/>
            <ComboBoxItem Content="Rest"/>
            <ComboBoxItem Content="Office"/>
        </ComboBox>
        <Label Content="Merge rooms" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="20" Foreground="White"/>
        <Button Content="Confirm" HorizontalAlignment="Left" Margin="91,483,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Normal" Height="30" Width="70" RenderTransformOrigin="-0.291,0.467" Background="#FF42C130" Click="Button_Click_Confirm"/>
        <Button Content="Close" HorizontalAlignment="Left" Margin="232,483,0,0" VerticalAlignment="Top" Width="70" Height="30" FontSize="16" Background="#FFEA9292" Click="Button_Click_Close"/>

    </Grid>
</Window>
