<UserControl x:Class="TechHealth.View.ManagerView.VieW.RoomView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TechHealth.View.ManagerView.VieW"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="710">
    <!--<UserControl.DataContext>
        local:RoomView
    </UserControl.DataContext>-->

    <StackPanel Background="#44475a">
        <TextBlock Text="Rooms"
                   Foreground="White"
                   FontSize="28"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,0"/>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="340"/>
                <RowDefinition Height="70"/>
            </Grid.RowDefinitions>
            <DataGrid x:Name="dataEquipment" ItemsSource="{Binding Rooms, UpdateSourceTrigger=PropertyChanged}"
                      SelectedItem="{Binding SelectedItem}"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      SelectionMode="Extended"
                      AutoGenerateColumns="False"
                      Margin="10,10,10,69"
                      Background="#272537">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding RoomId}" Width="*"  CanUserResize="False"/>
                    <DataGridTextColumn Header="Floor" Binding="{Binding Floor}" Width="*"  CanUserResize="False"/>
                    <DataGridTextColumn Header="Availability" Binding="{Binding Availability}" Width="*"  CanUserResize="False"/>
                    <DataGridTextColumn Header="Type" Binding="{Binding RoomTypes}" Width="*"  CanUserResize="False"/>
                </DataGrid.Columns>
            </DataGrid>

            <Button x:Name="Add" Content="Add" Margin="20,0,10,10" HorizontalAlignment="Left" Width="120" Height="50"  Grid.Row="3"
                    Command="{Binding AddRoomCommand}"/>
            <Button x:Name="Merging" Content="Merging" Margin="90,280,0,10" HorizontalAlignment="Left" Width="120" Height="50"
                    Command="{Binding MergeRoomsCommand}"/>
            <Button x:Name="Separation" Content="Separation" Margin="495,280,0,10" HorizontalAlignment="Left" Width="120" Height="50"
                    Command="{Binding SeparateRoomsCommand}"/>
            <Button x:Name="Renovation" Content="Renovation" Margin="150,0,10,10" HorizontalAlignment="Left" Width="120" Height="50"  Grid.Row="3"
                    Command="{Binding RenovationCommand}"/>
            <Button x:Name="View" Content="View/Modify" Margin="-25,0,0,10" HorizontalAlignment="Center"  Width="120" Height="50"  Grid.Row="3"
                    Command="{Binding UpdateRoomCommand}"/>
            <Button x:Name="Inventory" Content="Inventory" Margin="250,0,0,10" HorizontalAlignment="Center"  Width="120" Height="50"  Grid.Row="3"
                    Command="{Binding InventoryCommand}"/>
            <Button x:Name="Delete" Content="Delete" Margin="0,0,20,10" HorizontalAlignment="Right" Width="120" Height="50"  Grid.Row="3"
                    Command="{Binding DeleteRoomCommand}"/>

            <!--<Image Source="/resources/signoutoption.png"
                   Height="24" HorizontalAlignment="Right" VerticalAlignment="Top"
                   Cursor="Hand" Margin="0,-41,110,0" Width="36"/>-->
        </Grid>
    </StackPanel>
</UserControl>
