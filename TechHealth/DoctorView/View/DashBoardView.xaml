<UserControl x:Class="TechHealth.DoctorView.View.DashBoardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TechHealth.DoctorView.View"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="85.6"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text=" Welcome back,John Black.We are hoping you are enjoying using our app.On dashboard you can acess to some application shortcuts.Enjoy!" FontSize="20" Foreground="White" TextWrapping="Wrap" Margin="0,0,0,406" Grid.RowSpan="2"/>
        <Grid Grid.Row="1" Margin="0,0.4,10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200*"/>
                <ColumnDefinition Width="150*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="59*"/>
                <RowDefinition Height="282*"/>
                <RowDefinition Height="69*"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Upcoming appointments" Foreground="#1FC192" FontSize="24"  Grid.Row="0" Grid.Column="0" Margin="0,11,132,4"/>
            <Border Grid.Row="1" Grid.Column="0" Background="#333545" BorderThickness="2" Margin="0,0,30,9.8">
                <ListView Grid.Column="0" ItemsSource="{Binding MyAppointments}" Grid.Row="1" SelectedItem="{Binding SelectedItem}" Margin="0.4,0.4,-2,-1.4">
                    <ListView.View>
                        <GridView AllowsColumnReorder="true" ColumnHeaderToolTip="Upcoming appointments">
                            <GridViewColumn DisplayMemberBinding="{Binding Path=Date,StringFormat=d}" Header="Date" Width="120"/>
                            <GridViewColumn DisplayMemberBinding="{Binding Path=StartTime,StringFormat=t}" Width="120" Header="StartTime"/>
                            <GridViewColumn DisplayMemberBinding="{Binding Path=FinishTime,StringFormat=t}" Header="FinishTime" Width="120"/>
                            <GridViewColumn DisplayMemberBinding="{Binding Path=Patient.FullName}" Header="Patient" Width="150"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Border>
            <Button Content="New examination" FontSize="10" Grid.Column="0" Grid.Row="2" Width="118" Height="40" HorizontalAlignment="Left" Margin="0,10.2,0,9.4" Command="{Binding NewExaminationCommand}"/>
            <Button Content="New surgery" FontSize="10" Grid.Column="0" Grid.Row="2" Width="110" Height="40" HorizontalAlignment="Center" Click="Button_Click" Margin="155,10.2,173,9.4" Command="{Binding NewSurgeryCommand}"/>
            <Button Content="New anamnesis" FontSize="10" Grid.Column="0" Grid.Row="2" Width="110" Height="40" HorizontalAlignment="Right" Margin="0,10.2,30,9.4" Command="{Binding NewCommand}"/>
            <TextBlock Text="Highlights" Foreground="#1FC192" FontSize="24"  Grid.Row="0" Grid.Column="1" Margin="0,15,131.4,0"/>
            <Border BorderBrush="#1FC192" BorderThickness="2,2,2,2" Grid.Row="1" Grid.Column="1" >
                <Grid Grid.Row="1" Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Pateint of month:" TextWrapping="Wrap" Foreground="White" FontWeight="Bold" FontSize="18" Margin="20,9,9.4,32.8" Grid.Row="0" Grid.Column="0" RenderTransformOrigin="0.602,0.537"/>
                    <TextBlock Text="Dusan Vukovic" Foreground="White" FontSize="18" Height="38"  Margin="10.4,9,-9.6,48.2" Grid.Row="0" Grid.Column="1"/>
                    <TextBlock FontWeight="Bold" Text="Most prescribed medicine:" Foreground="White" FontSize="18" TextWrapping="Wrap" Margin="20,0.2,0.4,38.6" Grid.Column="0" RenderTransformOrigin="0.602,0.537" Grid.Row="1"/>
                    <TextBlock Text="Paracetamol-Uno" Foreground="White" FontSize="18" Margin="9.6,0.2,-9,56.6" Grid.Column="1" Grid.Row="1"/>
                    <TextBlock Text="You have three new notifications:" TextWrapping="Wrap" FontWeight="Bold" Foreground="White" FontSize="18" Margin="19,92.2,10.4,25.4" Grid.Row="1" Grid.Column="0" RenderTransformOrigin="0.592,0.371" Grid.RowSpan="2"/>
                    <Button Content="Notifications" Grid.Row="1" Grid.Column="1"  Width="130" Height="40" Command="{Binding NotificationCommand}" Margin="9.6,86.2,26,59.4" Grid.RowSpan="2" />
                </Grid>
            </Border>
            <Button Content="Rate us!" FontSize="10" Grid.Column="1" Grid.Row="2"  Width="110" Height="40" />
        </Grid>

    </Grid>
</UserControl>
